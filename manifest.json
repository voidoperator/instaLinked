{
  "manifest_version": 3,
  "name": "LinkedInstant",
  "description": "LinkedInstant - Your LinkedIn assistant",
  "version": "0.1",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.linkedin.com/in/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*", "file://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
